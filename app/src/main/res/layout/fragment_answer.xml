<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/white">
        <include layout="@layout/include_header" android:id="@+id/header"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <View
            android:background="#20000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/clean"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_cleaning_services_100"
                android:padding="4dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <EditText
                android:id="@+id/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:inputType="text"
                android:background="@drawable/rect_4dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/send"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_send_100"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:layout_width="50dp"
                android:layout_height="35dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <FrameLayout
        android:id="@+id/div_copy"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/copy"
            android:text="复制模型"
            android:layout_margin="26dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </FrameLayout>
</FrameLayout>